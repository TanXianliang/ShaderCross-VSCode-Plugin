{
  "name": "shadercross",
  "displayName": "ShaderCross",
  "description": "A VSCode extension for shader development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:shaderCrossView",
    "onCommand:shadercross.ShaderCross"
  ],
  "icon": "./resources/icon.svg",
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "shadercross.ShaderCross",
      "title": "Shader Cross"
    }],
    "viewsContainers": {
      "activitybar": [{
        "id": "shaderCrossContainer",
        "title": "Shader Cross",
        "icon": "resources/icon.svg"
      }]
    },
    "views": {
      "shaderCrossContainer": [{
        "type": "webview",
        "id": "shaderCrossView",
        "name": "Shader Workbench"
      }]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
